                <!--<property name="url" value="${rangym.url}" />-->
                <!--<property name="username" value="${rangym.user}" />-->
                <!--<property name="password" value="${rangym.pass}" />-->
            <!--</dataSource>-->
        <!--</environment>-->
		</environments>

    <!--注册映射文件-->
   <mappers>
       <mapper resource="MyMapper.xml" />
       <mapper resource="SqlMapper.xml" />
   </mappers>
</configuration>